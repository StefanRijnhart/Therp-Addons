<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data noupdate="False">
        <record id="rule_hr_analytic_timesheet" model="ir.rule">
            <field name="name">External user: Access to time written on own partner's analytic accounts</field>
            <field name="model_id" ref="hr_timesheet.model_hr_analytic_timesheet"/>
            <field name="groups" eval="[(4,ref('group_external_user_hr_timesheet'))]"/>
            <field name="domain_force">[
                ('line_id.account_id.partner_id', 'in', [x.id for x in user.external_user_partner_ids])]</field>
        </record>
        <record id="rule_account_analytic_line" model="ir.rule">
            <field name="name">External user: Access to own partner's analytic line</field>
            <field name="model_id" ref="analytic.model_account_analytic_line"/>
            <field name="groups" eval="[(4,ref('group_external_user_hr_timesheet'))]"/>
            <field name="domain_force">[
                ('account_id.partner_id', 'in', [x.id for x in user.external_user_partner_ids])]</field>
        </record>
    </data>
</openerp>
